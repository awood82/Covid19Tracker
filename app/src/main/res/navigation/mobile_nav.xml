<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_nav"
    app:startDestination="@id/generalInfoFragment">

    <fragment
        android:id="@+id/generalInfoFragment"
        android:name="com.example.android.covid19tracker.screen_general_info.GeneralInfoFragment"
        android:label="@string/menu_title_total_stats"
        tools:layout="@layout/fragment_general" />

    <fragment
        android:id="@+id/regionFragment"
        android:name="com.example.android.covid19tracker.screen_region.RegionFragment"
        android:label="@string/menu_title_region_stats"
        tools:layout="@layout/fragment_region" >
        <action
            android:id="@+id/action_regionFragment_to_bottomSheetFragment"
            app:destination="@id/bottomSheetFragment" />
    </fragment>

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.example.android.covid19tracker.screen_map.MapFragment"
        android:label="@string/menu_title_map" >
        <action
            android:id="@+id/action_mapFragment_to_bottomSheetFragment"
            app:destination="@id/bottomSheetFragment" />
    </fragment>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.mapwithmarker.MapsMarkerActivity" />

    <dialog
        android:id="@+id/bottomSheetFragment"
        android:name="com.example.android.covid19tracker.screen_bottom_sheet.BottomSheetFragment"
        android:label="BottomSheetFragment" >
        <argument
            android:name="regionalStats"
            app:argType="com.example.android.covid19tracker.domain.RegionalStats" />
    </dialog>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.android.covid19tracker.screen_about.AboutFragment"
        android:label="@string/menu_title_about" />
</navigation>