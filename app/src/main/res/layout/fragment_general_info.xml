<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.android.covid19tracker.screen_general_info.GeneralInfoViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/total_cases_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="@{@string/total_confirmed_cases(viewModel.generalStats.totalCases)}"
            app:layout_constraintBottom_toTopOf="@+id/currently_infected_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="9,999,999 total cases" />

        <TextView
            android:id="@+id/currently_infected_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@{@string/currently_infected(viewModel.generalStats.infectedCases)}"
            app:layout_constraintBottom_toTopOf="@+id/recovered_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/total_cases_text"
            tools:text="3,333,333 currently infected"/>

        <TextView
            android:id="@+id/recovered_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@{@string/recovered(viewModel.generalStats.recoveryCases)}"
            app:layout_constraintBottom_toTopOf="@+id/deaths_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/currently_infected_text"
            tools:text="2,222,222 recovered"/>

        <TextView
            android:id="@+id/deaths_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="@{@string/deaths(viewModel.generalStats.deathCases)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recovered_text"
            tools:text="1,111,111 deaths"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>